@{
    ViewData["Title"] = "Employees";
}

@model  EmployeesViewModel

<asp:Button Text="Export" OnClick="ExportCSV" runat="server" />
<vc:types></vc:types>
<table class="table table-bordered" id="id1">
    <thead class="font-weight-bold dar" style="background-color: #002E5D">
        <tr style="color:white;">
            <td>First Name</td>
            <td>Last Name</td>
            <td>International</td>
            <td>Gender</td>
            <td>Email Address</td>
            <td>Expected Hours</td>
            <td>Semester</td>
            <td>Year</td>
            <td>Phone</td>
            <td>BYU ID</td>
            <td>Position</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee c in Model.employees)
            {
                <tr>
                    <td>@c.FirstName</td>
                    <td>@c.LastName</td>
                    <td>@c.International</td>
                    <td>@c.Gender</td>
                    <td>@c.EmailAddress</td>
                    <td>@c.ExpectedHours</td>
                    <td>@c.Semester</td>
                    <td>@c.Year</td>
                    <td>@c.Phone</td>
                    <td>@c.ByuId</td>
                    <td>@c.PositionType</td>
                    <td><a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-employee="@c.EmployeeId">Edit</a></td>
                    <td><a class="btn btn-primary" asp-controller="Home" asp-action="Delete" asp-route-employee="@c.EmployeeId">Delete</a></td>
                </tr>
            }
    </tbody>


</table>
<button onclick="download_table_as_csv();">Convert To CSV File</button>
