@{
    ViewData["Title"] = "Add Employee";
}

@model Project4.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        h1 {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        form {
            display: flex;
            justify-content: center;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            background-color: beige;
        }

            form > div {
                padding-right: 30px;
            }

            form > :nth-child(2), :nth-child(3) {
                line-height: 23px;
            }

            form > :nth-child(4) {
                line-height: 35px;
            }

        .inputs > input, select {
            width: 150px;
        }

        .button {
            display: flex;
            justify-content: center;
            padding-top: 30px;
        }

            .button > button {
                background-color: #008CBA; /* Green */
                border: none;
                color: white;
                padding: 15px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

                .button > button:hover {
                    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
                }
    </style>
</head>
<body>
    <h1 style="text-align: center;">Student Employee Data</h1>
    <form id="studentData" method="post">
        <div class="inputs">
            <label asp-for="FirstName">First Name:</label><br>
            <input asp-for="FirstName" id="fname" type="text"><br>
            <label asp-for="LastName">Last Name:</label><br>
            <input asp-for="LastName" id="lname" type="text"><br>
            <label asp-for="EmailAddress">E-Mail:</label><br>
            <input asp-for="EmailAddress" id="email" type="email"><br>
            <label asp-for="ExpectedHours">Expected Hours:</label><br>
            <input asp-for="ExpectedHours" id="expecthours" type="number"><br>
            <label asp-for="Phone">Phone Number:</label><br>
            <input asp-for="Phone" id="phone" type="tel"><br>
            <label asp-for="ByuId">BYU ID:</label><br>
            <input asp-for="ByuId" id="byuid" type="number"><br>
            <label asp-for="ClassCode">Class Code:</label><br>
            <input asp-for="ClassCode" id="classcode" type="text"><br>
            <label asp-for="ByuName">BYU Name:</label><br>
            <input asp-for="ByuName" id="byuname" type="text"><br>
        </div>
        <div class="inputs">
            <label asp-for="Gender">Gender:</label><br>
            <select asp-for="Gender" id="gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select><br>
            <label asp-for="Semester">Semester:</label><br>
            <select asp-for="Semester" id="semester">
                <option value="fall">Fall</option>
                <option value="winter">Winter</option>
                <option value="spring">Spring</option>
                <option value="summer">Summer</option>
            </select><br>
            <label asp-for="Year">School Year:</label><br>
            <select asp-for="Year" id="year">
                <option value="freshman">Freshman</option>
                <option value="sophomore">Sophomore</option>
                <option value="junior">Junior</option>
                <option value="senior">Senior</option>
            </select><br>
            <label asp-for="PositionType">Position Type:</label><br>
            <select asp-for="PositionType" id="position">
                <option value="ta">TA</option>
                <option value="ra">RA</option>
                <option value="office">Office</option>
                <option value="studentinstructor">Student Instructor</option>
                <option value="other">Other</option>
            </select><br>
            <label asp-for="EmplRecord">Employment Record:</label><br>
            <select asp-for="EmplRecord" id="emplrecord">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select><br>
            <label asp-for="Supervisor">Supervisor:</label><br>
            <select asp-for="Supervisor" id="supervisor">
                <option value="0">Spencer Hilton</option>
                <option value="1">Greg Anderson</option>
                <option value="2">Mark Keith</option>
                <option value="3">James Gaskin</option>
            </select><br>
            <label asp-for="HireDate">Hire Date:</label><br>
            <input asp-for="HireDate" id="hiredate" type="date"><br>
        </div>
        <div class="inputs">
            <label asp-for="PayRate">Pay Rate:</label><br>
            <input asp-for="PayRate" id="payrate" type="number" step="0.01"><br>
            <label asp-for="LastPayIncrease">Last Pay Increase:</label><br>
            <input asp-for="LastPayIncrease" id="payinc" type="date"><br>
            <label asp-for="PayIncreaseAmount">Pay Increase Amount:</label><br>
            <input asp-for="PayIncreaseAmount" id="incamount" type="number" step="0.01"><br>
            <label asp-for="IncreaseInputDate">Increase Input Date:</label><br>
            <input asp-for="IncreaseInputDate" id="incdate" type="date"><br>
            <label asp-for="YearInProgram">Year in Program:</label><br>
            <select asp-for="YearInProgram" id="progyear">
                <option value="core">MSB Core</option>
                <option value="mism">MISM</option>
                <option value="mba">MBA</option>
                <option value="mpa">MPA</option>
                <option value="macc">MACC</option>
                <option value="other">Other Campus Major</option>
            </select><br>
            <label asp-for="QualtricsSurveySent">Qualtrics Survey Sent:</label><br>
            <select asp-for="QualtricsSurveySent" id="qualsurvey">
                <option value="0">Survey 0</option>
                <option value="1">Survey 1</option>
                <option value="2">Survey 2</option>
                <option value="3">Survey 3</option>
                <option value="4">Survey 4</option>
                <option value="5">Survey 5</option>
            </select><br>
            <label asp-for="Notes">Notes:</label><br>
            <input asp-for="Notes" id="notes" type="textarea">
        </div>
        <div>
            <label asp-for="International">International Student:</label>
            <input asp-for="International" id="international" type="checkbox"><br>
            <label asp-for="PayGradTuition">Graduate Tuition:</label>
            <input asp-for="PayGradTuition" id="gradtuit" type="checkbox"><br>
            <label asp-for="NameChangeCompleted">Name Change Completed:</label>
            <input asp-for="NameChangeCompleted" id="namechange" type="checkbox"><br>
            <label asp-for="SubmittedEForm">Submitted E-Form:</label>
            <input asp-for="SubmittedEForm" id="eform" type="checkbox"><br>
            <label asp-for="EFormSubmissionDate">E-Form Submission Date:</label>
            <input asp-for="EFormSubmissionDate" id="eformdate" type="date"><br>
            <label asp-for="WorkAuthReceived">Authorization to Work Received:</label>
            <input asp-for="WorkAuthReceived" id="workauth" type="checkbox"><br>
            <label asp-for="AuthToWorkEmailSentDate">Authorization to Work Received Date:</label>
            <input asp-for="AuthToWorkEmailSentDate" id="workauthdate" type="date"><br>
            <label asp-for="Terminated">Terminated:</label>
            <input asp-for="Terminated" id="terminated" type="checkbox"><br>
            <label asp-for="TerminationDate">Termination Date:</label>
            <input asp-for="TerminationDate" id="termdate" type="date"><br>
        </div>
        <div class="button">
            <button type="submit">Submit</button>
        </div>
    </form>
</body>
</html>

